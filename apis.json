	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-set provider token from login response",
					"if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data.api_token) {",
					"    pm.collectionVariables.set('provider_token', pm.response.json().data.api_token);",
					"    console.log('Provider token updated from login response');",
					"}"
				]
			}
		}
